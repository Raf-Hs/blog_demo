<p style="color: green"><%= notice %></p>


<div class="container">
<h1>Posts</h1>
<div id="posts">
  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <%= render post %>
      </div>
      <div class="card-footer text-end">
        <%= link_to "Show this post", post, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>


</div>