<%= form_with(model: [post, post.comments.build]) do |form| %>
  <div class="form-control">
    <%= form.text_field :name, placeholder: "Your Name" %>
    <%= form.text_field :email, placeholder: "Your Email" %>
    <%= form.text_area :content, placeholder: "Your Comment" %>
    <%= form.submit "Submit", class: "btn btn-primary mt-2" %>
  </div>
<% end %>